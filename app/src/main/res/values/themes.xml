<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaShare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBackgroundPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackgroundPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="hintTextColor">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="boxStrokeColor">@color/text_input_layout</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:drawableTint">@color/textColorPrimary</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>