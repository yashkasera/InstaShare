<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/colorBackgroundSecondary" />
            <corners android:bottomRightRadius="24dp" android:topRightRadius="24dp" />
        </shape>
    </item>

    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:endColor="#5C000000"
                android:startColor="#00FF0000" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:endColor="#5C000000"
                android:startColor="#00FF0000" />
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:endColor="#00FF0000"
                android:startColor="#6B000000" />
            <corners android:topRightRadius="24dp"/>
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:endColor="#00FF0000"
                android:startColor="#6B000000" />
            <corners android:bottomRightRadius="24dp" />
        </shape>
    </item>

</layer-list>